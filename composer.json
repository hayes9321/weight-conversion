{
    "name": "hayes/weight-conversion",
    "description": "Weight conversions in PHP",
    "keywords": [
        "Hayes",
        "weight-conversion"
    ],
    "homepage": "https://github.com/hayes/weight-conversion",
    "license": "MIT",
    "authors": [
        {
            "name": "Travis Hayes",
            "email": "travis@travismhayes.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Hayes\\WeightConversion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hayes\\WeightConversion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
